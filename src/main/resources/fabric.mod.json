{
	"schemaVersion": 1,
	"id": "noshades",
	"version": "${version}",
	"name": "NoShades Mod",
	"description": "This mod adds the ability to force enable/disable block shading free of any loading screens.",
	"authors": [
		"StartsMercury"
	],
	"contact": {
		"sources": "https://github.com/StartsMercury/noshades",
		"issues": "https://github.com/StartsMercury/noshades/issues"
	},
	"license": "MIT",
	"icon": "pack.png",
	"environment": "client",
	"entrypoints": {
		"client": [
			"com.github.startsmercury.noshades.NoShadesMod"
		],
		"modmenu": [
			"com.github.startsmercury.noshades.NoShadesModMenu"
		]
	},
	"mixins": [
		"noshades.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.11.3",
		"fabric": "*",
		"java": ">=16",
		"minecraft": "1.17.x",
